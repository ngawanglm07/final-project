<%- include("partials/header"); -%>

<% if (topperData) { %>
  <h1><%= topperData.Name %></h1>

  <% if (topperData.mainsAnswers && topperData.mainsAnswers.length > 0) { %>
    <h2>Mains Answers:</h2>
    <ul>
      <% topperData.mainsAnswers.forEach(answer => { %>
        <li>
          <p>Question <%= answer.QuestionNumber %>:</p>
          <p><%= answer.AnswerText %></p>

          <!-- Loop through the images and display them -->
          <% if (answer.AnswerImages && answer.AnswerImages.length > 0) { %>
            <h3>Answer Images:</h3>
            <ul>
              <% answer.AnswerImages.forEach(image => { %>
                <li>
                
                  <img src="/uploads/<%= image.imageUrl %>" alt="<%= image.description %>">




                </li>
              <% }); %>
            </ul>
          <% } %>

        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <p>No Mains Answers found for <%= topperData.Name %>.</p>
  <% } %>
<% } else { %>
  <p>Topper not found.</p>
<% } %>

<%- include("partials/footer"); -%>



